# This is an example file. DO NOT commit actual secrets to version control.
# To create the actual secret, run:
# kubectl create secret generic app-secrets \
#   --from-literal=openai-api-key=<YOUR_KEY> \
#   --from-literal=datadog-api-key=<YOUR_KEY> \
#   --from-literal=vertex-ai-key=<YOUR_KEY>

apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: mcp-agent-dev
  labels:
    app: mcp-agent
    environment: dev
type: Opaque
stringData:
  # OpenAI API Key (if using OpenAI instead of Vertex AI)
  openai-api-key: "sk..."

  # Datadog API Key
  datadog-api-key: "..."

  # Vertex AI credentials (if using Vertex AI)
  vertex-ai-key: "..."

  # GCP Service Account Key (base64 encoded JSON)
  gcp-sa-key: |
    {
      "type": "service_account",
      "project_id": "datadog-ese-sandbox",
      ...
    }
