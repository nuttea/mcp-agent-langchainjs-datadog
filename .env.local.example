# Local Development Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================
POSTGRES_USER=burgerapp
POSTGRES_PASSWORD=changeme123
POSTGRES_DB=burgerdb

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=development

# ============================================================================
# OpenAI API Configuration (Required for Agent API)
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# Frontend Configuration
# ============================================================================
VITE_BURGER_API_URL=http://localhost:8080
VITE_AGENT_API_URL=http://localhost:8081

# ============================================================================
# Datadog APM Configuration (Optional - for local APM testing)
# ============================================================================
# Set DD_TRACE_ENABLED=true to enable Datadog APM locally
DD_ENV=local
DD_VERSION=dev
DD_TRACE_ENABLED=false
DD_PROFILING_ENABLED=false
DD_RUNTIME_METRICS_ENABLED=false
DD_LLMOBS_ENABLED=false
DD_API_KEY=

# ============================================================================
# Performance Issue Feature Flags (For Datadog APM Demo)
# ============================================================================
# Set to "true" to enable specific performance issues for testing
PERF_ISSUE_DB_QUERY_LOOPS=false
PERF_ISSUE_DB_POOL_EXHAUST=false
PERF_ISSUE_CPU_BLOCKING=false
